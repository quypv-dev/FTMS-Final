@model FTMS.Models.TrainerInfo

@{
	ViewBag.Title = "Create";
}

<h2>Create a new Trainer Info</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Create", "TrainerInfos", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	<div class="form-group">
		@Html.LabelFor(m => m.TrainerId)
		@Html.DropDownListFor(m => m.TrainerId
			, new SelectList(Model.Trainers, "Id", "Username")
			, "Select Trainer", new { @class = "form-control" }
		)
	</div>
	<div class="form-group">
		@Html.LabelFor(p => p.Full_Name)
		@Html.TextBoxFor(p => p.Full_Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(p => p.Full_Name, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(p => p.Email)
		@Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
		@Html.ValidationMessageFor(p => p.Email, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(p => p.Working_Place)
		@Html.TextBoxFor(p => p.Working_Place, new { @class = "form-control" })
		@Html.ValidationMessageFor(p => p.Working_Place, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(p => p.Phone)
		@Html.TextBoxFor(p => p.Phone, new { @class = "form-control" })
		@Html.ValidationMessageFor(p => p.Phone, "", new { @class = "text-danger" })
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
}